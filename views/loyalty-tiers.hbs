<h1>Loyalty Tiers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each loyalty_tiers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each loyalty_tiers}}
        <tr>
            <td>{{this.TierID}}</td>
            <td>{{this.Tier}}</td>
            <td>{{this.MinSpend}}</td>
            <td>{{this.Discount}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
